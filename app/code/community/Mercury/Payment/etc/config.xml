<?xml version="1.0"?>

<config>
    <modules>
        <Mercury_Payment>
            <version>1.3.0</version>
        </Mercury_Payment>
    </modules>

    <global>
        <blocks>
            <mercurypayment>
                <class>Mercury_Payment_Block</class>
            </mercurypayment>
        </blocks>
        <helpers>
            <mercurypayment>
                <class>Mercury_Payment_Helper</class>
            </mercurypayment>
        </helpers>
        <models>
            <mercurypayment>
                <class>Mercury_Payment_Model</class>
            </mercurypayment>
        </models>
        <resources>
            <mercurypayment_setup>
                <setup>
                    <module>Mercury_Payment</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </mercurypayment_setup>
        </resources>
        <fieldsets>
            <sales_convert_quote_payment>
                <mercury_transaction>
                    <to_order_payment>*</to_order_payment>
                </mercury_transaction>
            </sales_convert_quote_payment>
            <sales_convert_order_payment>
                <mercury_transaction>
                    <to_quote_payment>*</to_quote_payment>
                </mercury_transaction>
            </sales_convert_order_payment>
        </fieldsets>
    </global>
    <frontend>
        <routers>
            <mercurypayment>
                <use>standard</use>
                <args>
                    <module>Mercury_Payment</module>
                    <frontName>mercurypayment</frontName>
                </args>
            </mercurypayment>
        </routers>
        <layout>
            <updates>
                <mercurypayment>
                    <file>mercurypayment.xml</file>
                </mercurypayment>
            </updates>
        </layout>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <mercury_paymentsales_order_place_after_handler>
                        <type>singleton</type>
                        <class>mercurypayment/observer</class>
                        <method>savePaymentTransaction</method>
                    </mercury_paymentsales_order_place_after_handler>
                </observers>
            </checkout_onepage_controller_success_action>
        </events>
    </frontend>
    <default>
        <payment>
            <mercurypayment>
                <active>1</active>
                <active_in_frontend>1</active_in_frontend>
                <ignore_shipping_method>0</ignore_shipping_method>
                <model>mercurypayment/mercury</model>
                <order_status>pending</order_status>
                <title>Mercury Payment</title>
                <allowspecific>0</allowspecific>
                <sandbox>0</sandbox>
                <pending_set>2</pending_set>
                <bitcoinmin>2</bitcoinmin>
                <ethereummin>2</ethereummin>
                <dashmin>2</dashmin>
            </mercurypayment>
        </payment>
    </default>
</config>